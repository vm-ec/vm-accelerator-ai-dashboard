        .matrix-section { background-color: var(--card-bg); border-radius: 12px; border: 1px solid var(--border-color); overflow: hidden; display: flex; flex-direction: column; width: 100%; position: relative; min-height: 200px; }
        .table-scroll-wrapper { width: 100%; overflow-x: auto; }
        table { width: 100%; min-width: 850px; border-collapse: collapse; font-size: 0.9rem; }
