        td { padding: 1rem 1.25rem; border-bottom: 1px solid var(--border-color); vertical-align: middle; white-space: nowrap; }
        tr:hover { background-color: rgba(59, 130, 246, 0.05); cursor: pointer; }
        tr.selected-row { background-color: rgba(59, 130, 246, 0.15); border-left: 3px solid var(--accent-blue); }

        /* Helpers */
        .financial-element { transition: opacity 0.3s; }
        .financial-hidden { display: none !important; }
        .status-pill { display: inline-flex; align-items: center; gap: 6px; padding: 4px 10px; border-radius: 20px; font-size: 0.75rem; font-weight: 600; }
        .st-ok { background: rgba(16, 185, 129, 0.15); color: var(--accent-green); }
        .st-warn { background: rgba(245, 158, 11, 0.15); color: var(--accent-warning); }
        .st-crit { background: rgba(239, 68, 68, 0.15); color: var(--accent-red); }

        /* Loading Overlay */
        .loading-overlay { position: absolute; inset: 0; background: rgba(15, 23, 42, 0.8); display: flex; align-items: center; justify-content: center; z-index: 10; font-weight: 500; color: var(--accent-blue); backdrop-filter: blur(2px); transition: opacity 0.3s; pointer-events: none; opacity: 0; }
        .loading-active { opacity: 1; pointer-events: all; }

        /* Details Panel */
        .details-wrapper { position: sticky; top: 100px; height: fit-content; }
        .details-panel { background-color: var(--card-bg); border-radius: 12px; border: 1px solid var(--border-color); padding: 1.5rem; display: flex; flex-direction: column; gap: 1.5rem; }
